<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>Kunst Cafe</title>

        <link href='http://fonts.googleapis.com/css?family=Advent+Pro:400,100,200,300,500,600,700&subset=latin,latin-ext'
              rel='stylesheet' type='text/css'>

        <link rel="stylesheet" href="{{ asset('css/foundation.css') }}"/>
        <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"/>
        <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>

        {% block stylesheets %}{% endblock %}

        <script src="{{ asset('js/vendor/modernizr.js') }}"></script>
    </head>
    <body>
        <div class="row">
            <div class="large-12 small-12 columns">
                {% block top_bar %}{% endblock %}
            </div>
        </div>

        <div class="row">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div data-alert class="alert-box success">
                    {{ flashMessage }}
                    <a href="#" class="close">&times;</a>
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div data-alert class="alert-box warning">
                    {{ flashMessage }}
                    <a href="#" class="close">&times;</a>
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div data-alert class="alert-box alert">
                    {{ flashMessage }}
                    <a href="#" class="close">&times;</a>
                </div>
            {% endfor %}
        </div>

        {% block main_banner %}{% endblock %}

        {% block content %}{% endblock %}

        <div id="back-top">
            <a href="#top">
                <i class="fa fa-arrow-up"></i>
                Back To Top
            </a>
        </div>

        <footer id="footer">
            <div class="row">
                <div class="large-12 small-12 columns">
                    <div class="large-4 small-12 columns">
                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#">Address</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#">Phone</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#">Email</a>
                            </div>
                        </div>
                    </div>

                    <div class="large-4 small-12 columns text-center">
                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#"><i class="fa social fa-facebook"></i> Facebook</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#"><i class="fa social fa-twitter"></i> Twitter</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#"><i class="fa social fa-instagram"></i> Instagram</a>
                            </div>
                        </div>
                    </div>

                    <div class="large-4 small-12 columns text-right">
                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#">Privacy Policy</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <a href="#">Site Map</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <script src="{{ asset('js/vendor/jquery.js') }}"></script>
        <script src="{{ asset('js/foundation.min.js') }}"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        <script src="{{ asset('js/sticky-footer.js') }}"></script>
        <script src="{{ asset('js/greensock/TweenMax.min.js') }}"></script>
        <script src="{{ asset('js/jquery.superscrollorama.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>
        <script>
            $(document).foundation();
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
