{% extends '::public_layout.html.twig' %}

{% block main_banner_text %}{{ "Artists"|trans }}{% endblock %}

{% block main_banner_image %}{{ asset('images/norway-about-us.jpg') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="large-6 small-12 columns">
            <div class="row bottom-margin artist-row image-block" data-href="{{ path('kunst_cafe_main_view_artist', {'slug': 'jim-artist'}) }}">
                <div class="large-4 small-12 columns">
                    <div class="image">
                        <img src="{{ asset('images/artist-1.jpg') }}" alt class="styled-div" />

                        <div class="overlay styled-div"></div>
                    </div>
                </div>

                <div class="large-8 small-12 columns">
                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <h3>Jim Artist</h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <q>Art is the only thing that could be done by an elephant and then sold for few millions</q>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="large-6 small-12 columns">
            <div class="row bottom-margin artist-row image-block">
                <div class="large-4 small-12 columns">
                    <div class="image">
                        <img src="{{ asset('images/artist-3.jpg') }}" alt class="styled-div" />

                        <div class="overlay styled-div"></div>
                    </div>
                </div>

                <div class="large-8 small-12 columns">
                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <h3>Anne Painter</h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <q>Life is too short to not to paint</q>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="large-6 small-12 columns">
            <div class="row bottom-margin artist-row image-block">
                <div class="large-4 small-12 columns">
                    <div class="image">
                        <img src="{{ asset('images/artist-2.jpg') }}" alt class="styled-div" />

                        <div class="overlay styled-div"></div>
                    </div>
                </div>

                <div class="large-8 small-12 columns">
                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <h3>Sarah Colorful</h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <q>Colors are what makes this world so beautiful</q>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="large-6 small-12 columns">
            <div class="row bottom-margin artist-row image-block">
                <div class="large-4 small-12 columns">
                    <div class="image">
                        <img src="{{ asset('images/artist-4.jpg') }}" alt class="styled-div" />

                        <div class="overlay styled-div"></div>
                    </div>
                </div>

                <div class="large-8 small-12 columns">
                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <h3>Old McDonald</h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <q>Art is all around us, even in Vietnam - I was there</q>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}