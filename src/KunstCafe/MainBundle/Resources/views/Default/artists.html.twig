{% extends '::public_layout.html.twig' %}

{% block main_banner_text %}{{ "Artists"|trans }}{% endblock %}

{% block main_banner_image %}{{ asset('images/norway-about-us.jpg') }}{% endblock %}

{% block content %}
        {% for artist in artists %}
            {% if loop.index % 2 == 1 %}
                <div class="row">
            {% endif %}
            <div class="large-6 small-12 columns scroll-fade-in">
                <div class="row bottom-margin artist-row image-block" data-href="{{ path('kunst_cafe_main_view_artist', {'slug': artist.slug}) }}">
                    <div class="large-4 small-12 columns">
                        <div class="image">
                            <img src="{{ asset('uploads/media/' ~ artist.image) }}" alt="{{ artist }}" class="styled-div" />

                            <div class="overlay styled-div"></div>
                        </div>
                    </div>

                    <div class="large-8 small-12 columns">
                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <h3>{{ artist }}</h3>
                            </div>
                        </div>

                        <div class="row">
                            <div class="large-12 small-12 columns">
                                <q>{{ artist.quote }}</q>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% if loop.index % 2 == 0 %}
                </div>
            {% endif %}
        {% endfor %}
{% endblock %}