{% extends '::public_layout.html.twig' %}

{% block main_banner_text %}{{ "About Us"|trans }}{% endblock %}

{% block main_banner_image %}{{ asset('images/norway-about-us.jpg') }}{% endblock %}

{% block javascripts %}
    {% javascripts 'js/gallery.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <div class="row image-block-col">
        <div class="large-6 small-12 columns scroll-fade-in image-block">
            <div class="image">
                <img src="{{ asset('images/img-1.jpg') }}" alt />

                <div class="overlay"></div>
            </div>
        </div>

        <div class="large-6 small-12 columns scroll-fade-in">
            <div class="row">
                <div class="large-12 small-12 columns">
                    <h3>Kunst Cafe about heading</h3>
                </div>
            </div>

            <div class="row">
                <div class="large-12 small-12 columns">
                    <p>And some text about it</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row image-block-col">
        <div class="large-6 small-12 columns scroll-fade-in text-center">
            <q class="large-quote">
                Some quote about how this kunst cafe affected the world!
            </q>
            <span class="author">Bill Gates</span>
        </div>

        <div class="large-6 small-12 columns scroll-fade-in image-block">
            <div class="image">
                <img src="{{ asset('images/img-2.jpg') }}" alt />

                <div class="overlay"></div>
            </div>
        </div>
    </div>

    <div class="row full-width">
        <div class="large-12 small-12 columns scroll-fade-in image-block parent-middle">
            <ul class="gallery inline-list">
                <li class="image">
                    <img src="{{ asset('images/art-4.jpg') }}" alt />
                </li>
                <li class="image">
                    <img src="{{ asset('images/art-5.jpg') }}" alt />
                </li>
            </ul>
            <a id="gallery-previous" class="in-middle" data-vertical>
                <span class="fa-stack fa-3x">
                    <i class="fa fa-square-o fa-stack-2x"></i>
                    <i class="fa fa-angle-left fa-stack-1x"></i>
                </span>
            </a>
            <a id="gallery-next" class="in-middle" data-vertical>
                <span class="fa-stack fa-3x">
                    <i class="fa fa-square-o fa-stack-2x"></i>
                    <i class="fa fa-angle-right fa-stack-1x"></i>
                </span>
            </a>
        </div>
    </div>
{% endblock %}